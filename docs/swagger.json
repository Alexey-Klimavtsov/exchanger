{
    "swagger": "2.0",
    "info": {
        "description": "API для получения прогноза погоды",
        "title": "Weather API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/today": {
            "get": {
                "description": "Возвращает погоду на текущий день",
                "tags": [
                    "Weather"
                ],
                "summary": "Прогноз погоды на сегодня",
                "parameters": [
                    {
                        "type": "string",
                        "default": "almaty",
                        "description": "Город",
                        "name": "city",
                        "in": "query",
                        "required": true
                    },
                    {
                        "enum": [
                            "celsius",
                            "fahrenheit"
                        ],
                        "type": "string",
                        "default": "celsius",
                        "description": "Единицы измерения",
                        "name": "unit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/model.TodayWeather"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/weekly": {
            "get": {
                "description": "Возвращает прогноз погоды на 7 дней",
                "tags": [
                    "Weather"
                ],
                "summary": "Получить прогноз на неделю",
                "parameters": [
                    {
                        "type": "string",
                        "default": "almaty",
                        "description": "Название города",
                        "name": "city",
                        "in": "query",
                        "required": true
                    },
                    {
                        "enum": [
                            "celsius",
                            "fahrenheit"
                        ],
                        "type": "string",
                        "default": "celsius",
                        "description": "Единицы измерения",
                        "name": "unit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/model.WeeklyWeather"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "model.DayWeather": {
            "type": "object",
            "properties": {
                "day": {
                    "type": "string"
                },
                "temperature": {
                    "type": "number"
                }
            }
        },
        "model.TodayWeather": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "temperature": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "model.WeeklyWeather": {
            "type": "object",
            "properties": {
                "days": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.DayWeather"
                    }
                },
                "unit": {
                    "type": "string"
                }
            }
        }
    }
}